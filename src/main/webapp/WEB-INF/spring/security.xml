<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-4.2.xsd">

<http auto-config="true" use-expressions="true" >
    <intercept-url pattern="/login.html" access="permitAll"/>
    <intercept-url pattern="/rest/**" access="permitAll"/>
    <intercept-url pattern="/**" access= "hasRole('ROLE_USER')"/>
    <csrf disabled="true"/>
</http>

<authentication-manager>
    <authentication-provider>
        <user-service>
            <user name="User2" password="Password2" authorities="ROLE_USER" />
            <user name="User3" password="Password3" authorities="ROLE_USER" />
            <user name="User4" password="Password4" authorities="ROLE_USER" />
            <user name="User5" password="Password5" authorities="ROLE_USER" />
            <user name="User6" password="Password6" authorities="ROLE_USER" />
        </user-service>
    </authentication-provider>
</authentication-manager>

</beans:beans>

